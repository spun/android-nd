<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/articles_list_card_margin"
    android:layout_marginLeft="@dimen/articles_list_card_margin"
    android:layout_marginRight="@dimen/articles_list_card_margin"
    android:layout_marginTop="@dimen/articles_list_card_margin"
    android:clickable="true"
    android:elevation="@dimen/list_card_elevation"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thumbnail -->
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/thumbnail_content_description"
            tools:src="@tools:sample/backgrounds/scenic" />

        <!-- Title -->
        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/articles_list_card_title_bottom_padding"
            android:paddingLeft="@dimen/articles_list_card_title_side_padding"
            android:paddingRight="@dimen/articles_list_card_title_side_padding"
            android:paddingTop="@dimen/articles_list_card_title_top_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="@tools:sample/lorem" />

        <!-- Published date -->
        <TextView
            android:id="@+id/article_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/articles_list_card_date_bottom_padding"
            android:paddingLeft="@dimen/articles_list_card_date_side_padding"
            android:paddingRight="@dimen/articles_list_card_date_side_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/article_card_date_color"
            tools:text="@tools:sample/date/ddmmyy" />

    </LinearLayout>

</android.support.v7.widget.CardView>
